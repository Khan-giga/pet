<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    
    <changeSet id="1733657927648-1" author="khan-giga">
        <createTable tableName="wood_types">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(128)"/>
        </createTable>
    </changeSet>
    
    <changeSet id="1733658390649-1" author="khan-giga">
        <createTable tableName="workpiece_diameter">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="milimeters_diameter" type="INTEGER"/>
            <column name="board_count" type="INTEGER"/>
        </createTable>
    </changeSet>
    
    <changeSet id="1733679708672-1" author="khan-giga">
        <createTable tableName="workpieces">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="wood_types_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="workpiece_diameter_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="meters_length" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="1733681392066-1" author="khan-giga">
        <createTable tableName="boards">
            <column name="id" type="BIGSERIAL SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="wood_types_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="workpieces_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="1733683054432-1" author="kan-giga">
        <addForeignKeyConstraint baseTableName="workpieces" baseColumnNames="wood_types_id"
                                 constraintName="FK_workpieces_wood_types"
                                 referencedTableName="wood_types"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1733683737411-1" author="khan-giga">
        <addForeignKeyConstraint baseTableName="workpieces" baseColumnNames="workpiece_diameter_id"
                                 constraintName="FK_workpiece_diameter"
                                 referencedTableName="workpiece_diameter"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1733683980566-1" author="kan-giga">
        <addForeignKeyConstraint baseTableName="boards" baseColumnNames="wood_types_id"
                                 constraintName="FK_boards_wood_types"
                                 referencedTableName="wood_types"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1733684087048-1" author="khan-giga">
        <addForeignKeyConstraint baseTableName="boards" baseColumnNames="workpieces_id"
                                 constraintName="FK_boards_workpieces"
                                 referencedTableName="workpieces"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>